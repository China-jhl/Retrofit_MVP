    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play1" />

    <Button
        android:id="@+id/bt_stop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop1" />

    <Button
        android:id="@+id/bt_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play2" />

    <Button
        android:id="@+id/bt_stop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop2" />

